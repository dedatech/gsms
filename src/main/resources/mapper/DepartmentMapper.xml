<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gsms.gsms.repository.DepartmentMapper">

    <resultMap id="DepartmentResultMap" type="com.gsms.gsms.domain.entity.Department">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="parent_id" property="parentId"/>
        <result column="level" property="level"/>
        <result column="sort" property="sort"/>
        <result column="remark" property="remark"/>
        <result column="update_time" property="updateTime"/>
        <result column="is_deleted" property="isDeleted"/>
    </resultMap>

    <sql id="selectAllFields">
        id, name, parent_id, level, sort, remark, create_time, update_time, is_deleted
    </sql>

    <select id="selectById" parameterType="long" resultMap="DepartmentResultMap">
        SELECT <include refid="selectAllFields"/>
        FROM sys_department
        WHERE id = #{id} AND is_deleted = 0
    </select>

    <select id="selectAll" resultMap="DepartmentResultMap">
        SELECT <include refid="selectAllFields"/>
        FROM sys_department
        WHERE is_deleted = 0
        ORDER BY level, sort
    </select>

    <select id="selectByParentId" parameterType="long" resultMap="DepartmentResultMap">
        SELECT <include refid="selectAllFields"/>
        FROM sys_department
        WHERE parent_id = #{parentId} AND is_deleted = 0
        ORDER BY sort
    </select>

    <insert id="insert" parameterType="com.gsms.gsms.domain.entity.Department" 
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO sys_department(name, parent_id, level, sort, remark)
        VALUES(#{name}, #{parentId}, #{level}, #{sort}, #{remark})
    </insert>

    <update id="update" parameterType="com.gsms.gsms.domain.entity.Department">
        UPDATE sys_department
        <set>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="parentId != null">parent_id = #{parentId},</if>
            <if test="level != null">level = #{level},</if>
            <if test="sort != null">sort = #{sort},</if>
            <if test="remark != null">remark = #{remark},</if>
        </set>
        WHERE id = #{id}
    </update>

    <update id="deleteById" parameterType="long">
        UPDATE sys_department SET is_deleted = 1, update_time = CURRENT_TIMESTAMP WHERE id = #{id}
    </update>
    
    <select id="selectByCondition" resultMap="DepartmentResultMap">
        SELECT <include refid="selectAllFields"/>
        FROM sys_department
        WHERE is_deleted = 0
        <if test="name != null and name != ''">
            AND name LIKE CONCAT('%', #{name}, '%')
        </if>
        <if test="parentId != null">
            AND parent_id = #{parentId}
        </if>
        ORDER BY level, sort
    </select>

</mapper>
